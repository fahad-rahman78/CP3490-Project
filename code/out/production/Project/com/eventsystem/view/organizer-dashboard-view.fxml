<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<!--
This is the layout for the Organizer Dashboard.
It's linked to the OrganizerDashboardController.
-->
<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
      fx:controller="com.eventsystem.controller.OrganizerDashboardController"
      spacing="10" style="-fx-padding: 20; -fx-background-color: #f9f9f9; -fx-pref-width: 800; -fx-pref-height: 600;">

    <Label fx:id="welcomeLabel" text="Welcome, Organizer!" textFill="#333333">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
        <padding>
            <Insets bottom="10.0"/>
        </padding>
    </Label>

    <!-- HBox to split the screen into two columns -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">

        <!-- Left Column: My Events -->
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="My Created Events:" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            <ListView fx:id="eventListView" VBox.vgrow="ALWAYS"
                      style="-fx-border-color: #cccccc; -fx-border-radius: 5;"/>
        </VBox>

        <!-- Right Column: Pending Requests -->
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Pending Event Requests:" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #e67e22;"/>
            <ListView fx:id="pendingListView" VBox.vgrow="ALWAYS"
                      style="-fx-border-color: #e67e22; -fx-border-radius: 5;"/>
        </VBox>

    </HBox>

    <!-- Action Bar -->
    <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10 0 0 0;">

        <!-- Button to cancel an event -->
        <Button fx:id="cancelButton" text="Cancel Selected"
                onAction="#onCancelEventClick"
                style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>

        <!-- Button to view registrations -->
        <Button fx:id="viewRegButton" text="View Registrations"
                onAction="#onViewRegistrationsClick"
                style="-fx-background-color: #17a2b8; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>

        <!-- Button to approve request -->
        <Button fx:id="approveButton" text="Approve Request"
                onAction="#onApproveEventClick"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>

        <!-- Button to reject request -->
        <Button fx:id="rejectButton" text="Reject Request"
                onAction="#onRejectEventClick"
                style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>

        <!-- Logout Button -->
        <Button fx:id="logoutButton" text="Logout"
                onAction="#onLogoutButtonClick"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>

        <Label fx:id="messageLabel" text="Please select an event." textFill="#555555" HBox.hgrow="ALWAYS"/>

    </HBox>

</VBox>