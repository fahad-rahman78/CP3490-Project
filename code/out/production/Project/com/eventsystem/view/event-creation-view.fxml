<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21"
      fx:controller="com.eventsystem.controller.EventCreationController"
      spacing="15" style="-fx-padding: 20; -fx-background-color: #ffffff; -fx-pref-width: 450;">

    <Label text="Create a New Event" textFill="#333333">
        <font>
            <Font name="System Bold" size="20.0" />
        </font>
    </Label>

    <GridPane hgap="10" vgap="10">
        <Label text="Event Title:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="titleField" promptText="e.g., Study Group" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextArea fx:id="descriptionArea" promptText="What is the event about?"
                  wrapText="true" prefRowCount="3" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Date:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <DatePicker fx:id="datePicker" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Start Time (24h):" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <ComboBox fx:id="startHourCombo" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="End Time (24h):" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <ComboBox fx:id="endHourCombo" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="Room:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <ComboBox fx:id="roomCombo" promptText="Select a room" GridPane.rowIndex="5" GridPane.columnIndex="1" />

        <Label text="Capacity:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <Spinner fx:id="capacitySpinner" editable="true" GridPane.rowIndex="6" GridPane.columnIndex="1" />

    </GridPane>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button text="Create Event" onAction="#onCreateEventSubmit"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Label fx:id="messageLabel" textFill="RED" />
    </HBox>

</VBox>